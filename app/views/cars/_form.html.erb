      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%
      if @car
        @options_for_style = [
            { "name" => "Sedan","id" => "Sedan"},
            { "name" => "SUV","id" => "SUV" },
            { "name" => "Coupe","id" => "Coupe"}
        ]
      end
    %>

  <div class="field">
    <%= form.label :license %>
    <%= form.text_field :license, id: :car_License %>
