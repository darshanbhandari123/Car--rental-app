<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>License Plate</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Hourly Rental Rate</th>
      <th>Style</th>
      <th>Location</th>
      <th>Availability</th>
      <th>Checkout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.License %></td>
        <td><%= car.Manufacturer %></td>
        <td><%= car.Model %></td>
        <td><%= car.Hourly %></td>
        <td><%= car.Style %></td>
        <td><%= car.Location %></td>
        <td><%= car.Availability %></td>
        <td><%= car.Checkout %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>


<%= form_tag(cars_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Cars" %>
    <%= submit_tag "Search" %>
<% end %>

<% if @cars.present? %>
   <table>
    <tbody>
    <% @cars.each do |car| %>
        <tr>
          <td><%= car.License %></td>
          <td><%= car.Manufacturer %></td>
          <td><%= car.Model %></td>
          <td><%= car.Hourly %></td>
          <td><%= car.Style %></td>
          <td><%= car.Location %></td>
          <td><%= car.Availability %></td>
          <td><%= car.Checkout %></td>
          <td><%= link_to 'Book', book_cars_path(car) %></td>
        </tr>



    <% end %>
    </tbody>
   </table>




<% else %>
    <p>There are no cars containing the term(s) <%= params[:search] %>.</p>
<% end %>