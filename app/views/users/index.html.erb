<p id="notice"><%= notice %></p>

<div class="table-div">
  <div class="div-header">
    <h1>Users</h1>
    <%= link_to 'Create new user', new_user_path,  class: "btn btn-primary", role: "button"  %>
    <%= link_to 'Home', dashboard_path,  class: "btn btn-primary", role: "button"  %>
  </div>
  <table class="table table-hover" style="margin-top:15px;">
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <% if @user['email_id'] == user.email_id %>
              <td><%= user.email_id %></td>
            <% else %>
              <td><%= link_to user.email_id, view_user_users_path(email_id: user) %></td>
            <% end %>
              <td><%= user.name %></td>
            <% if user.u_type.to_i == 1 %>
              <td>Super Admin</td>
            <% elsif user.u_type.to_i == 2 %>
              <td>Admin</td>
            <% else %>
              <td>Customer</td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
